<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:padding="20dp"
              android:id="@+id/llBackgroundOfFizz"
              android:weightSum="100">

    <FrameLayout
            android:id="@+id/frameCurrent"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="89">
    </FrameLayout>

    <View android:layout_width="match_parent" android:layout_height="20dp"
          android:background="@android:color/transparent"/>

    <LinearLayout android:layout_width="match_parent" android:layout_height="0dp"
                  android:layout_weight="11"
                  android:weightSum="10"
                  android:orientation="horizontal">

        <FrameLayout
                android:id="@+id/frameLoading"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="7">

        </FrameLayout>

        <View android:layout_width="20dp" android:layout_height="match_parent"
              android:background="@android:color/transparent"/>

        <FrameLayout
                android:id="@+id/frameFollowUs"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3">

        </FrameLayout>

    </LinearLayout>

</LinearLayout>